<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/css/cart.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <a href="/" id="headerLogo">
            <img src="/images/Logo.png" alt="Logo" height="100">
        </a>
        <div class="top-right-links">
            <a href="/login">Login/Register</a>
            <a href="/settings">Account/Settings</a>
        </div>
    </header>

    <nav>
        <input type="checkbox" id="toggle-menu" />
        <label for="toggle-menu" id="hamburger">&#9776;</label>
        <ul id="nav-links">
            <li><a href="/">NFT PRODUCTS</a></li>
            <li><a href="/search">SEARCH</a></li>
            <li><a href="/about">ABOUT</a></li>
            <li><a href="/faq">FAQ</a></li>
            <li id="cart-icon-container">
                <a href="/cart" id="cart-icon">
                    <img src="/images/my-cart.png" alt="Cart" />
                </a>
            </li>
        </ul>
    </nav>

    <h2>SHOPPING CART</h2>
    <p>Your selected NFTs are listed below. Review your items and proceed to checkout.</p>
    
    <div class="cart-container">
        <% let totalPrice = 0; %>
        <% cartItems.forEach(item => { %>
        <div class="cart-item" data-id="<%= item.id %>">
            <img src="<%= item.image %>" alt="<%= item.name %>" class="cart-item-image">
            <div class="cart-item-details">
                <h3><%= item.name %></h3>
                <p>Price: $<%= item.price %></p>
                <button class="remove-item-btn" onclick="removeItem(<%= item.id %>)">Remove Item</button>
            </div>
        </div>
        <% totalPrice += item.price; %>
        <% }) %>

        <div class="cart-summary">
            <h3>Total: $<%= totalPrice %></h3>
            <button id="checkout-btn" class="checkout-btn">Proceed to Checkout</button>
        </div>
    </div>

    <footer>
        <div class="footer-section">
            <h3>Get to know us</h3>
            <ul>
                <li><a href="">Newsletter</a></li>
                <li><a href="">Join us</a></li>
            </ul>
        </div>
        <div class="footer-section">
            <h3>Making Money with NFTs</h3>
            <p>
                Got with your gut. Google it.<br>
                Take a leap of faith. <a href="">Learn more.</a>
            </p>
        </div>
        <div class="footer-section">
            <h3>Need help?</h3>
            <p>
                NFTs are non refundable.<br>
                <a href="">Contact US Treasury</a>
            </p>
        </div>
        <div class="footer-section">
            <h3>Your account</h3>
            <ul>
                <li><a href="/login">Login/Register</a></li>
                <li><a href="/settings">Account/Settings</a></li>
            </ul>
        </div>
    </footer>

    <script src="/js/cart.js"></script>
</body>
</html>
